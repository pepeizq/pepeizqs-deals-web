@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String11");
}

<div class="perfil">
    <div class="texto-info">@ViewData["Title"]</div>

    <hr>

    <div class="row">
        @if (Model.resultado.Succeeded == true)
        {
            <label class="texto-info-entrada">@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String12")</label>
        }
        else
        {
            <label class="texto-info-entrada">@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String13")</label>
        }
    </div>
</div>
