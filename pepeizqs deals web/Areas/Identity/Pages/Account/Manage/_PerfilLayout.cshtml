@{
    #nullable disable

    string idioma = Context.Request.Headers["Accept-Language"].ToString().Split(";").FirstOrDefault()?.Split(",").FirstOrDefault();

    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="perfil">
    <div class="texto-info">@Herramientas.Idiomas.CogerCadena(idioma, "Settings.String1")</div>
 
    <hr/>

    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column" style="margin-top: 0px;">
                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-solid fa-envelope"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String1")
                            </span>
                        </div>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-solid fa-lock"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String2")
                            </span>
                        </div>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-solid fa-user"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String3")
                            </span>
                        </div>
                    </a>
                </li>
            </ul>

            <hr />

            <ul class="nav nav-pills flex-column" style="margin-top: 0px;">
                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.NotificationsNavClass(ViewContext)" id="notifications" asp-page="./Notifications">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-solid fa-bell"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String4")
                            </span>
                        </div>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.SteamAccountNavClass(ViewContext)" id="steamaccount" asp-page="./SteamAccount">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-brands fa-steam"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String5")
                            </span>
                        </div>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="perfil-lateral @ManageNavPages.KeysNavClass(ViewContext)" id="keys" asp-page="./Keys">
                        <div style="display: flex; align-items: center;">
                            <i class="fa-solid fa-key"></i>

                            <span style="margin-left: 15px;">
                                @Herramientas.Idiomas.CogerCadena(idioma, "SettingsLayout.String6")
                            </span>
                        </div>
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
