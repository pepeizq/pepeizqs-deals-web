@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "~/Areas/Identity/Pages/Account/Manage/_PerfilLayout.cshtml";
}

<div class="texto-info">@ViewData["Title"]</div>

<div class="perfil-alerta" role="alert">
    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="mb-3">
                <label asp-for="Input.Password" class="texto-info-entrada"></label>
                <input asp-for="Input.Password" class="entrada-texto" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="boton-peligro" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
