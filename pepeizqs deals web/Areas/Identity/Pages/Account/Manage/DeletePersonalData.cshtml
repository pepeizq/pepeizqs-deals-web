@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String38");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "~/Areas/Identity/Pages/Account/Manage/_PerfilLayout.cshtml";
}

<div class="texto-info">@ViewData["Title"]</div>

<div class="perfil-alerta" role="alert">
    <strong>@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String39")</strong>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="mb-3">
                <label class="texto-info-entrada">@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String40")</label>
                <input asp-for="Input.Password" class="entrada-texto" autocomplete="current-password" aria-required="true" placeholder="@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String41")" />
                
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="boton-peligro" style="margin-top: 10px;" type="submit">@Herramientas.Idiomas.CogerCadena(Model.idioma, "Settings.String42")</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
