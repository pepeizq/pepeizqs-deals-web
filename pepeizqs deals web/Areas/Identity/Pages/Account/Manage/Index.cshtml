@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Areas/Identity/Pages/Account/Manage/_PerfilLayout.cshtml";
}

<div class="texto-info">@ViewData["Title"]</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row perfil-espacio-adicional">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Input.Nickname" class="texto-info-entrada"></label>
            <input asp-for="Input.Nickname" class="entrada-texto" placeholder="Please choose your nickname." />
        </div>

        <div class="mb-3">
            <label asp-for="Input.SteamAccount" class="texto-info-entrada"></label>
            <input asp-for="Input.SteamAccount" class="entrada-texto" placeholder="Please enter your Steam Account."/>
            
            <span asp-validation-for="Input.SteamAccount" class="text-danger"></span>
        </div>

        <div class="perfil-flexible">
            <div class="perfil-flexible-izquierda">
                <button id="update-profile-button" type="submit" class="boton">Save</button>
            </div>
        </div> 
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
