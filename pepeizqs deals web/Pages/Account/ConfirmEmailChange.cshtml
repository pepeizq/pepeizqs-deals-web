@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = Herramientas.Idiomas.BuscarTexto(Model.idioma, "String4", "ConfirmPassword");
}

<div style="background-color: var(--fondoOscuro); border: 1px solid var(--fondoBotonPequeño); max-width: 600px; padding: 40px; margin: auto;">
    <div class="texto-info">@ViewData["Title"]</div>

    <hr>

    <div class="row">
        @if (Model.completado == true)
        {
            <label>@Herramientas.Idiomas.BuscarTexto(Model.idioma, "String5", "ConfirmPassword")</label>
        }
        else
        {
            <label>@Herramientas.Idiomas.BuscarTexto(Model.idioma, "String6", "ConfirmPassword")</label>
        }
     </div>    
</div>

