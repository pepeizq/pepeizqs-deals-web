@page

@using Microsoft.AspNetCore.Identity
@using pepeizqs_deals_web.Areas.Identity.Data

@model pepeizqs_deals_web.Pages.FreeModel

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@{
    #nullable disable

    string titulo = Herramientas.Idiomas.BuscarTexto(Model.idioma, "Title", "Free");

    ViewData["Title"] = titulo;
    Layout = "/Pages/Shared/_Layout.cshtml";

    bool usuarioLogeado = SignInManager.IsSignedIn(User);
    Usuario usuario = new Usuario();

    if (usuarioLogeado == true)
    {
        usuario = await UserManager.GetUserAsync(User);
    }

    List<Juegos.JuegoGratis> juegosActuales = new List<Juegos.JuegoGratis>();
    List<Juegos.JuegoGratis> juegosTodos = BaseDatos.Gratis.Buscar.Actuales();

    if (juegosTodos.Count > 0)
    {
        foreach (var juego in juegosTodos)
        {
            if (DateTime.Now >= juego.FechaEmpieza && DateTime.Now <= juego.FechaTermina)
            {
                Juegos.Juego juego2 = BaseDatos.Juegos.Buscar.UnJuego(juego.JuegoId.ToString());

                juego.Juego = juego2;

                juegosActuales.Add(juego);
            }
        }

        if (juegosActuales.Count > 0)
        {
            juegosActuales = juegosActuales.OrderBy(x => x.Nombre).ToList();

            int juegos = 0;
            int dlcs = 0;

            foreach (var juego in juegosActuales)
            {
                if (juego.Juego.Tipo == Juegos.JuegoTipo.Game)
                {
                    juegos += 1;
                }
                else if (juego.Juego.Tipo == Juegos.JuegoTipo.DLC)
                {
                    dlcs += 1;
                }
            }

            if (juegos == 0)
            {
                if (dlcs == 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String6", "Free"), dlcs.ToString()) + " " + Herramientas.Idiomas.BuscarTexto(Model.idioma, "String8", "Free");
                }
                else if (dlcs > 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String7", "Free"), dlcs.ToString()) + " " + Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
            }
            else if (juegos > 0)
            {
                if (juegos == 1 && dlcs == 0)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String3", "Free"), juegos.ToString()) + " " + Herramientas.Idiomas.BuscarTexto(Model.idioma, "String8", "Free");
                }
                else if (juegos > 1 && dlcs == 0)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String4", "Free"), juegos.ToString()) + " " + Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
                else if (juegos == 1 && dlcs == 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String3", "Free"), juegos.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String5", "Free") + " " +
                        string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String6", "Free"), dlcs.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
                else if (juegos > 1 && dlcs == 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String4", "Free"), juegos.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String5", "Free") + " " +
                        string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String6", "Free"), dlcs.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
                else if (juegos == 1 && dlcs > 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String3", "Free"), juegos.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String5", "Free") + " " +
                        string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String7", "Free"), dlcs.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
                else if (juegos > 1 && dlcs > 1)
                {
                    titulo = string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String4", "Free"), juegos.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String5", "Free") + " " +
                        string.Format(Herramientas.Idiomas.BuscarTexto(Model.idioma, "String7", "Free"), dlcs.ToString()) + " " +
                        Herramientas.Idiomas.BuscarTexto(Model.idioma, "String9", "Free");
                }
            }

            if (string.IsNullOrEmpty(titulo) == true)
            {
                titulo = Herramientas.Idiomas.BuscarTexto(Model.idioma, "String10", "Free");
            }
        }
    }

    string descripcion = Herramientas.Idiomas.BuscarTexto(Model.idioma, "String11", "Free");

    string enlace = "https://pepeizqdeals.com/free/";

    bool seo = false;
    string userAgent = string.Empty;

    if (HttpContext != null)
    {
        userAgent = HttpContext.Request.Headers.UserAgent;

        if (string.IsNullOrEmpty(userAgent) == false)
        {
            if (userAgent.Contains("http://www.google.com/bot.html") == true || userAgent.Contains("http://www.bing.com/bingbot.htm") == true)
            {
                seo = true;
            }
        }
    }

    if (seo == true)
    {
        @(await Html.RenderComponentAsync<Componentes.Secciones.Seo>(RenderMode.ServerPrerendered, new
        {
            idioma = Model.idioma,
            titulo = titulo,
            enlace = enlace,
            canonical = enlace,
            descripcion = descripcion
        }))

        @(await Html.RenderComponentAsync<Componentes.Secciones.Gratis>(RenderMode.ServerPrerendered, new
        {
            idioma = Model.idioma
        }))
    }
    else
    {
        @(await Html.RenderComponentAsync<Componentes.Secciones.Gratis>(RenderMode.Server, new
        {
            idioma = Model.idioma,
            usuarioId = usuario?.Id
        }))
    }
}
