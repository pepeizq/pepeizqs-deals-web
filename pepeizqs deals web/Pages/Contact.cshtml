	<div>
		<i class="fa-solid fa-circle-info" style="font-size: 25px;"></i>
	</div>
	<div>
		@Herramientas.Idiomas.BuscarTexto(Model.idioma, "String1", "Contact")
	</div>	
</div>

<div style="background-color: var(--fondoOscuro); border: 1px solid var(--fondoBotonPequeño); padding: 20px; margin-top: 30px; margin-bottom: 40px;">
