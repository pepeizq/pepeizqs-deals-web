@* @model pepeizqs_deals_web.Pages.BundleModel *@

@using Herramientas
@using Microsoft.AspNetCore.Identity
@using pepeizqs_deals_web.Areas.Identity.Data
@using System.Net;

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@model BundleModel2

@{
	#nullable disable

	// ViewData["Title"] = "test1" + " • " + "test2";
	Layout = "/Pages/Shared/_Layout.cshtml";

	bool usuarioLogeado = SignInManager.IsSignedIn(User);
	Usuario usuario = new Usuario();

	bool adminLogeado = false;

	if (usuarioLogeado == true)
	{
		usuario = await UserManager.GetUserAsync(User);

		if (await UsuarioCoger.RolDios(UserManager, User) == true)
		{
			adminLogeado = true;
		}
	}
}

@if (usuarioLogeado == true)
{
	@if (adminLogeado == true)
	{
		@(await Html.RenderComponentAsync<Componentes.Admin.Bundle>(RenderMode.ServerPrerendered, new { idioma = "es-ES", bundleId = Model.Id }))
	}
}

@(await Html.RenderComponentAsync<Componentes.Secciones.Bundle>(RenderMode.ServerPrerendered, new { idioma = "es-ES", bundleId = Model.Id }))
