@using Microsoft.AspNetCore.Identity;
@using pepeizqs_deals_web.Areas.Identity.Data;

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] • pepeizq's deals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/maestro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cabecera_cuerpo_pie.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/resto.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pepeizqs_deals_web.styles.css" asp-append-version="true" />
</head>

<body class="cuerpo">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light cabecera">
            <div class="container">
                <a class="texto-logo" asp-area="" asp-page="/Index">pepeizq's deals</a>

                @*Resolucion pequeña*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (await UsuarioCoger.RolDios(UserManager, User) == true)
                            {
                                <li class="nav-item">
                                    <a class="texto-cabecera" asp-area="" asp-page="/Juegos/Index">Admin Juegos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="texto-cabecera" asp-area="" asp-page="/Tiendas/Index">Admin Tiendas</a>
                                </li>
                            }
                        }
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container cuerpo-espacio">
        @RenderBody()
    </main>

    <footer class="pie">
        <div class="container">
            &copy; 2018 - @DateTime.Now.Year.ToString() • pepeizq's deals • <a asp-area="" asp-page="/Privacy" class="texto-pie">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>