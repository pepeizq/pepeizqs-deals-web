@page
@model IndexModel

@using Microsoft.Extensions.Caching.Memory;

@{
	ViewData["Title"] = Herramientas.Idiomas.CogerCadena(Model.idioma, "Index.Title");
	Layout = "/Pages/Shared/_Layout.cshtml";
}

<cache priority="CacheItemPriority.NeverRemove" expires-sliding="@TimeSpan.FromSeconds(30)" vary-by="@Model.idioma">
	@(await Html.RenderComponentAsync<Componentes.Secciones.Portada>(RenderMode.ServerPrerendered, new { idioma = @Model.idioma }))
</cache>
