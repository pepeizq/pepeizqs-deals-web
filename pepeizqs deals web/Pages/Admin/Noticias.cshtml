@page
@model pepeizqs_deals_web.Pages.Admin.NoticiasModel

@using Microsoft.AspNetCore.Identity
@using pepeizqs_deals_web.Areas.Identity.Data

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@{
	ViewData["Title"] = "Admin Noticias";
	Layout = "/Pages/Shared/_Layout.cshtml";
}

@if (SignInManager.IsSignedIn(User))
{
	@if (await UsuarioCoger.RolDios(UserManager, User) == true)
	{
		@(await Html.RenderComponentAsync<Componentes.Admin.Noticias>(RenderMode.ServerPrerendered))
	}
}