	private string CargarDescuento(Juegos.Juego juego)
	{
		string descuentoMensaje = null;

		descuentoMensaje = juego.PrecioMinimosHistoricos[0].Descuento.ToString();
		descuentoMensaje = descuentoMensaje + "%";

