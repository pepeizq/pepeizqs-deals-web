<style>
	.noticia-fuente {
		font-size: 18px;
	}

	.noticia-categoria {
		font-size: 15px;
	}

	.noticia-fecha {
		font-size: 15px;
	}

	.minimo-fuente {
		font-size: 17px;
	}

	.minimo-fuentefecha {
		font-size: 14px;
	}

	.minimo-espacio1 {
		width: 100px;
		padding: 20px;
	}

	.minimo-espacio2 {
