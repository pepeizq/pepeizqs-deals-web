                        else if (puntos.Count > 0)
                        {
                            bool añadirAño = true;

                            foreach (var punto in puntos)
                            {
                                if (punto.Año == historico.Fecha.Year)
                                {
                                    añadirAño = false;
                                }
                            }

                            if (añadirAño == true)
                            {
