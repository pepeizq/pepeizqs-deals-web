                if (p2.Moneda != JuegoMoneda.Euro)
                {
                    precio2 = p2.PrecioCambiado;
                }
                else
                {
                    precio2 = p2.Precio;
                }

                if (precio1 == precio2)
                {
                    return p2.FechaDetectado.CompareTo(p1.FechaDetectado);
                }
