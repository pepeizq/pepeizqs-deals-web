@code {

	#nullable disable

	List<Juegos.JuegoSuscripcion> suscripcionesActivasChoice = new List<Juegos.JuegoSuscripcion>();
	List<Juegos.JuegoSuscripcion> suscripcionesActivasPrime = new List<Juegos.JuegoSuscripcion>();

	List<Juegos.JuegoSuscripcion> suscripcionesCaducadas = new List<Juegos.JuegoSuscripcion>();

	protected override void OnInitialized()
	{
		foreach (var suscripcion in BaseDatos.Suscripciones.Buscar.Todos())
		{
			if (DateTime.Now >= suscripcion.FechaEmpieza && DateTime.Now <= suscripcion.FechaTermina)
			{
				if (suscripcion.Suscripcion == global::Suscripciones2.SuscripcionTipo.HumbleChoice)
				{
					suscripcionesActivasChoice.Add(suscripcion);
				}
				else if (suscripcion.Suscripcion == global::Suscripciones2.SuscripcionTipo.PrimeGaming)
				{
					suscripcionesActivasPrime.Add(suscripcion);
				}
			}
			else
			{
				suscripcionesCaducadas.Add(suscripcion);
			}
		}

		if (suscripcionesActivasChoice.Count > 0)
		{
			suscripcionesActivasChoice = suscripcionesActivasChoice.OrderBy(x => x.Nombre).ToList();
		}

		if (suscripcionesActivasPrime.Count > 0)
		{
			suscripcionesActivasPrime = suscripcionesActivasPrime.OrderBy(x => x.Nombre).ToList();
		}
	}
}
