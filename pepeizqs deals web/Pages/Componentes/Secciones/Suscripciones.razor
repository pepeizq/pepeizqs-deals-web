@if (suscripcionesActivasChoice.Count > 0)
{
	<div id="@suscripcionesActivasChoice[0].Suscripcion" class="perfil" style="margin-bottom: 80px;">
		<img src="@Suscripciones2.SuscripcionesCargar.DevolverSuscripcion(suscripcionesActivasChoice[0].Suscripcion).Imagen" style="width: 20%; margin-bottom: 10px;" />

		<hr>

		@if (suscripcionesActivasChoice.Count > 0)
		{
			<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
				@foreach (var suscripcion in suscripcionesActivasChoice)
				{
					<div>
						<a href="@Herramientas.EnlaceAcortador.Generar(suscripcion.Enlace, suscripcion.Suscripcion)" class="boton-pequeño" style="padding: 10px;" target="_blank">
							<div>
								<img src="@suscripcion.Imagen" style="max-width: 100%; max-height: 100%;" />
							</div>

							<div style="text-align: right; margin-top: 10px; height: 30px;">
								<img src="@Juegos.JuegoDRM2.SacarImagen(suscripcion.DRM)" style="max-width: 30px; max-height: 30px;" />
							</div>
						</a>
					</div>
				}
			</div>
		}
	</div>
}

