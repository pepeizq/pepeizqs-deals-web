@using Microsoft.AspNetCore.Components.Web
@using Toolbelt.Blazor.HeadElement

@rendermode @(new InteractiveServerRenderMode(prerender: true))

@if (string.IsNullOrEmpty(titulo) == false)
{
    <Title>
        @titulo • pepeizq's deals
    </Title>

    <Meta Property="og:title" Content="@titulo" />
}

@if (string.IsNullOrEmpty(descripcion) == false)
{
    <Meta Property="description" Content="@descripcion" />
    <Meta Property="og:description" Content="@descripcion" />
}

@if (string.IsNullOrEmpty(enlace) == false)
{
    <Meta Property="og:url" Content="@enlace" />
}
else
{
    <Meta Property="og:url" Content="https://pepeizqdeals.com" />
}

@if (string.IsNullOrEmpty(video) == false)
{
    <Meta Property="og:video" Content="@video" />
}

@if (string.IsNullOrEmpty(canonical) == false)
{
    <Link rel="canonical" href="@canonical" />
}

@if (string.IsNullOrEmpty(imagen) == false)
{
    <Meta Property="og:image" Content="@imagen" />
}
else
{
    <Meta Property="og:image" Content="https://pepeizqdeals.com/logo/logo6.png" />
}

<Meta Property="og:site_name" Content="pepeizq's deals" />
<Meta Property="og:type" Content="website" />
<Meta Property="robots" Content="index, follow, noimageindex" />
<Meta Property="keywords" Content="deals, games, free, offers, bundles" />

@code {

    #nullable disable

    [Parameter]
    public string idioma { get; set; }

    [Parameter]
    public string titulo { get; set; }

    [Parameter]
    public string descripcion { get; set; }

    [Parameter]
    public string enlace { get; set; }

    [Parameter]
    public string video { get; set; }

    [Parameter]
    public string canonical { get; set; }

    [Parameter]
    public string imagen { get; set; }
}
