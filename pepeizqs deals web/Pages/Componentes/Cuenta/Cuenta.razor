@using Microsoft.AspNetCore.Components.Web

<style>
    .boton-pestañas {
        color: var(--colorTexto);
        background: transparent;
        text-align: center;
        border: 0;
        width: 100%;
        transition: transform .2s;
        font-size: 17px;
        padding: 10px;
    }

        .boton-pestañas:hover {
            color: var(--colorTextoHover);
            transform: scale(1.01);
        }
</style>

<div style="max-width: 1000px; margin: auto;">
    <label style="font-size: 20px;">@Herramientas.Idiomas.CogerCadena(idioma, "String1", "Account")</label>
    <hr/>

    <div style="display: flex; align-items: start; gap: 50px; margin-top: 20px;">
        <div style="width: 50%;">
            <div style="display: flex; align-items: center; flex-direction: column; gap: 10px;">
                <button @onclick="@(e => MostrarCorreo(e))" class="boton-pestañas" style="@estiloCorreo;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String2", "Account")
                </button>

                <button @onclick="@(e => MostrarContraseña(e))" class="boton-pestañas" style="@estiloContraseña;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String4", "Account")
                </button>

                <button @onclick="@(e => MostrarNotificaciones(e))" class="boton-pestañas" style="@estiloNotificaciones;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String3", "Account")
                </button>

                <button @onclick="@(e => MostrarDatosPersonales(e))" class="boton-pestañas" style="@estiloDatosPersonales;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String7", "Account")
                </button>

                <hr style="width: 100%;" />

                <button @onclick="@(e => MostrarSteam(e))" class="boton-pestañas" style="@estiloSteam;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String5", "Account")
                </button>

                <button @onclick="@(e => MostrarClaves(e))" class="boton-pestañas" style="@estiloClaves;">
                    @Herramientas.Idiomas.CogerCadena(idioma, "String6", "Account")
                </button>
            </div>
        </div>

        <div style="width: 100%;">
            @if (mostrarCorreo == true)
            {
                <Correo idioma="@idioma" />
            }

            @if (mostrarContraseña == true)
            {
                <CambioContrasena idioma="@idioma" />
            }

            @if (mostrarNotificaciones == true)
            {
                <NotificacionesCorreo idioma="@idioma" />
            }

            @if (mostrarDatosPersonales == true)
            {
                <DatosPersonales idioma="@idioma" />
            }

            @if (mostrarSteam == true)
            {
                <CuentaSteam idioma="@idioma" />
            }

            @if (mostrarClaves == true)
            {
                <Claves idioma="@idioma"/>
            }
        </div>
    </div>
</div>


@code {

    #nullable disable

    [Parameter]
    public string idioma { get; set; }

    protected override void OnInitialized()
    {
        mostrarCorreo = true;
        estiloCorreo = fondo;
    }

    private string fondo = "background-color: var(--fondoOscuro); border: 1px solid var(--fondoBotonPequeño)";

    private void CerrarPestañas()
    {
        mostrarCorreo = false;
        mostrarContraseña = false;
        mostrarNotificaciones = false;
        mostrarDatosPersonales = false;
        mostrarSteam = false;
        mostrarClaves = false;

        estiloCorreo = null;
        estiloContraseña = null;
        estiloNotificaciones = null;
        estiloDatosPersonales = null;
        estiloSteam = null;
        estiloClaves = null;
    }

    private bool mostrarCorreo = false;
    private string estiloCorreo = null;

    private void MostrarCorreo(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarCorreo = true;
        estiloCorreo = fondo;
    }

    private bool mostrarContraseña = false;
    private string estiloContraseña = null;

    private void MostrarContraseña(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarContraseña = true;
        estiloContraseña = fondo;
    }

    private bool mostrarNotificaciones = false;
    private string estiloNotificaciones = null;

    private void MostrarNotificaciones(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarNotificaciones = true;
        estiloNotificaciones = fondo;
    }

    private bool mostrarDatosPersonales = false;
    private string estiloDatosPersonales = null;

    private void MostrarDatosPersonales(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarDatosPersonales = true;
        estiloDatosPersonales = fondo;
    }

    private bool mostrarSteam = false;
    private string estiloSteam = null;

    private void MostrarSteam(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarSteam = true;
        estiloSteam = fondo;
    }

    private bool mostrarClaves = false;
    private string estiloClaves = null;

    private void MostrarClaves(MouseEventArgs e)
    {
        CerrarPestañas();
        mostrarClaves = true;
        estiloClaves = fondo;
    }
}
