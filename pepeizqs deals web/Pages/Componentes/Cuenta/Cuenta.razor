    .boton-pestañas:hover {
        color: var(--colorTextoHover);
        transform: scale(1.01);
    }

    .grid-estructura {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
    }

    @@media (max-width: 800px) {
        .grid-estructura {
            display: grid;
            gap: 15px;
        }
    }
